<%= shared_path %>/log/*.log {
  daily
  missingok
  rotate 180
  compress
  dateext
  delaycompress

  lastaction
    pid=<%= unicorn_pid %>
    test -s $pid && kill -USR1 "$(cat $pid)"
  endscript

  prerotate
    if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
      run-parts /etc/logrotate.d/httpd-prerotate; \
    fi \
  endscript

  postrotate
    [ ! -f /run/nginx.pid ] || kill -USR1 `cat /run/nginx.pid`
  endscript
}
